<% include head.ejs %>
<title>Match Tag</title>
<header>
  <nav class="navBar">
    <ul>
      <li class=""><a href="../login"></a></li>
      <li class=""><a href="../searchLocation"></a></li>
      <li class=""><a href="../personalTag"></a></li>
    </ul>
  </nav>
</header>
<main class="detail">
  <h1>
    <%= data.name + ", " + data.age%>
  </h1>
  <% if (data.cover) { %>
  <div class="img-container">
    <img alt src="/upload/<%= data.cover %>">
  </div>
  <% } %>

  <section class="bio">
  <h2>
    <%= data.pickupline %>
  </h2>
  <p>
    <%= data.description %>
  </p>
</section>

  <section class="detailButtons"> 
    <a href="javascript:history.back()" class="backBtn">Terug</a>
<h1><%= collTitle %></h1>
    <% if (user.name === data.name) { %>
      <button id=deleteButton data-id="<%= data._id %>" class=delete>Verwijder Tag</button>
    <% } else { %>
      <a href="#" class="delete">Stuur bericht</a>
    <% } %>
  </section>
</main>
<% include tail.ejs %>