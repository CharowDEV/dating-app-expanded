<% include head.ejs %>
<title>Match Tag</title>
<header>
  <nav class="navBar">
    <ul>
      <li class=""><a href="login"></a></li>
      <li class=""><a href="searchLocation"></a></li>
      <li class=""><a href="personalTag"></a></li>
    </ul>
  </nav>
</header>
<main class="droppedTags">
    <h1><%= collTitle%></h1>
        <section class="droppedTagList">
                <h2>Gedropte gamertags:</h2>
                <ul>
                  <% for (var i = 0; i < data.length; i++) { %>
                  <li tabindex="0">
                    <a  href="/<%= collTitle%>/<%= data[i]._id %>"><p>
                        <%= data[i].name + ", " + data[i].age%></p></a>
                  </li>
                  <% } %>
                </ul>
              </section>
              <% var found = false; %>
              <% for (var i = 0; i < data.length; i++) { %>
               <%   if (user.name === data[i].name) { %>
                   <%   found = true; %>
                  <%    break; %>
                <%  } %>
              <% } %>
              <% if (found) { %>
                    <a class="dropTagBtn" href="/<%= collTitle%>/<%= data[i]._id %>">Verwijder jouw tag</a>
               <% }else{ %>
                    <a class="dropTagBtn" href="/<%= collTitle%>/add">
                Drop jouw tag</a>
               <% } %>

</main>
<% include tail.ejs %>